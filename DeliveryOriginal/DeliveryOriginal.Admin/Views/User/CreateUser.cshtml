@using DeliveryOriginal.Admin.Models

@model User

@{ ViewBag.Title = "Create User"; }
@{ Html.EnableClientValidation(); }

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        @using (Html.BeginForm("CreateUser", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-12">
                    <h4>Create user</h4>
                    <hr>
                </div>
            </div>
            @Html.ValidationSummary()

            @Html.HiddenFor(m => m.Id)

            <div class="bordered-content">
                <div class="form-group">
                    <label class="col-md-4">Login:</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4">Password:</label>
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4">Full Name:</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4">Role:</label>
                    <div class="col-md-8">
                        @Html.EnumDropDownListFor(m => m.Role, "Select User Role", new { @class = "form-control", id = "userRoleSelection" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" value="Save" class="btn btn-default pull-right" />
                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default pull-right cancel-btn" })
                </div>
            </div>
        }
    </div>
</div>